<!-- Header -->
<div class="header bg-gradient-primary pb-8 pt-5 pt-md-8">
  <div class="container-fluid">
    <div class="header-body"></div>
  </div>
</div>

<div class="container-fluid mt--7">
  <div class="row justify-content-center">

    <div class="col-lg-6 col-md-8">
      <div class="card bg-secondary shadow border-0">

        <div class="card-body px-lg-5 py-lg-5">
          <div class="text-center text-muted mb-4">
            <h3>Adicionar escuteiro</h3>
          </div>

          <%= simple_form_for([agrupamento, escuteiro]) do |f| %>
            <% if escuteiro.errors.any? %>
              <div id="error_explanation">
                <h2><%= pluralize(escuteiro.errors.count, "error") %> prohibited this regiao from being saved:</h2>

                <ul>
                  <% escuteiro.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>

            <div class="form-group">
              <div class="input-group input-group-alternative mb-3">
                <div class="input-group-prepend">
                  <span class="input-group-text"><i class="ni ni-hat-3"></i></span>
                </div>
                <%= f.input :nome, placeholder: "Nome completo do escuteiro" %>
              </div>
            </div>

            <div class="form-group">
              <div class="input-group input-group-alternative mb-3">
                <div class="input-group-prepend">
                  <span class="input-group-text"><i class="ni ni-hat-3"></i></span>
                </div>
                <%= f.input :data_nascimento, as: :string, label: 'Data de nascimento', placeholder: "dd/mm/yyyy" %>
              </div>
            </div>

            <div class="form-group">
              <div class="input-group input-group-alternative mb-3">
                <div class="input-group-prepend">
                  <span class="input-group-text"><i class="ni ni-hat-3"></i></span>
                </div>
                <%= f.input :contacto, label: 'Contacto do encarregado', placeholder: "ex: 923999000" %>
              </div>
            </div>


            <div class="text-center">
              <button type="submit" class="btn btn-primary mt-4">Registar</button>
              <%= link_to 'Cancelar', agrupamento_admin_agrupamento_path(agrupamento), class: "btn btn-secondary mt-4" %>
            </div>
          <% end %>
        </div>

      </div>
    </div>

  </div>
</div>

