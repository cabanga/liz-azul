<!-- Header -->
<div class="header pb-8 pt-5 pt-lg-8 d-flex align-items-center" style="min-height: 600px; background-image: url(../assets/img/theme/profile-cover.jpg); background-size: cover; background-position: center top;">
  <!-- Mask -->
  <span class="mask bg-gradient-default opacity-8"></span>
  <!-- Header container -->
  <div class="container-fluid d-flex align-items-center">
    <div class="row">
      <div class="col-lg-12 col-md-10">
        <h3 class="display-2 text-white"><%= "Detalhes do escuteiro" %></h3>
        <p class="text-white"><%= "Agrupamento nº #{@agrupamento.numero} - #{@agrupamento.regiao.nome}" %></p>
        <hr>
        <p class="text-white mt-0 mb-2"><strong>Nome:</strong> <%= @escuteiro.nome %></p>
        <p class="text-white mt-0 mb-2"><strong>Idade:</strong> <%= calc_idade(@escuteiro) %> anos</p>
        <p class="text-white mt-0 mb-2"><strong>Referência:</strong> <%= @escuteiro.referencia %></p>
        <p class="text-white mt-0 mb-5"><strong>Contacto:</strong> <%= @escuteiro.contacto %></p>
        <%= link_to 'Actualizar', edit_agrupamento_escuteiro_path(@agrupamento, @escuteiro), class: "btn btn-success" %>
        <%= link_to 'Eliminar', edit_agrupamento_path(@agrupamento), class: "btn btn-danger" %>
       
      </div>
    </div>
  </div>
</div>
