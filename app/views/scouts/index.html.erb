<p id="notice"><%= notice %></p>

<h1>Scouts</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Identification type</th>
      <th>Identification number</th>
      <th>Started at</th>
      <th>Parent name</th>
      <th>Cell phone1</th>
      <th>Cell phone2</th>
      <th>Reference numer</th>
      <th>Slug</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @scouts.each do |scout| %>
      <tr>
        <td><%= scout.name %></td>
        <td><%= scout.identification_type %></td>
        <td><%= scout.identification_number %></td>
        <td><%= scout.started_at %></td>
        <td><%= scout.parent_name %></td>
        <td><%= scout.cell_phone1 %></td>
        <td><%= scout.cell_phone2 %></td>
        <td><%= scout.reference_numer %></td>
        <td><%= scout.slug %></td>
        <td><%= link_to 'Show', scout %></td>
        <td><%= link_to 'Edit', edit_scout_path(scout) %></td>
        <td><%= link_to 'Destroy', scout, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

