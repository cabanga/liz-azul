<p id="notice"><%= notice %></p>

<h1>Confirmations</h1>

<table>
  <thead>
    <tr>
      <th>Scout</th>
      <th>Slug</th>
      <th>Year at</th>
      <th>Position</th>
      <th>Section</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @confirmations.each do |confirmation| %>
      <tr>
        <td><%= confirmation.scout_id %></td>
        <td><%= confirmation.slug %></td>
        <td><%= confirmation.year_at %></td>
        <td><%= confirmation.position_id %></td>
        <td><%= confirmation.section_id %></td>
        <td><%= confirmation.status %></td>
        <td><%= link_to 'Show', confirmation %></td>
        <td><%= link_to 'Edit', edit_confirmation_path(confirmation) %></td>
        <td><%= link_to 'Destroy', confirmation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Confirmation', new_confirmation_path %>
