<!-- Header -->
<div class="header bg-gradient-yellow pb-8 pt-5 pt-md-8">
  <div class="container-fluid">
    <div class="header-body">
        <h4 class="display-2 text-white"><%= "#{@agrupamento.nome} - #{@agrupamento.regiao.nome}" %></h4>
    </div>
  </div>
</div>

<div class="container-fluid mt--7">
  <div class="row">
        <div class="col-xl-4">
            <div class="card shadow">
                <div class="card-header bg-transparent">
                    <div class="row align-items-center">
                        <div class="col">
                            <%= link_to 'Adicionar escuteiro', new_agrupamento_escuteiro_path(@agrupamento), class: "btn btn-sm btn-primary" %>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    <div class="col-xl-8 mb-5 mb-xl-0">
      <div class="card shadow">
        <div class="card-header border-0">
          <div class="row align-items-center">
            <div class="col">
              <h3 class="mb-0">Lobitos registados</h3>
            </div>
            <div class="col text-right">
            </div>
          </div>
        </div>
        <div class="table-responsive">
          <!-- Projects table -->
          <table class="table align-items-center table-flush">
            <thead class="thead-light">
              <tr>
                <th scope="col">Nome</th>
                <th scope="col">Idade</th>
                <th scope="col">NÂº ref.</th>
                <th scope="col"></th>
              </tr>
            </thead>
            <tbody>
              <% @agrupamento.lobitos.each do |escuteiro| %>
                <tr>
                  <td><%= escuteiro.nome %></td>
                  <td><%= calc_idade(escuteiro) %></td>
                  <td><%= escuteiro.referencia %></td>
                  <td><%= link_to 'Detalhes', agrupamento_escuteiro_path(@agrupamento, escuteiro), class: "btn btn-sm btn-primary" %></td>
                </tr>
              <% end %>
            </tbody>
          </table>

        </div>
      </div>
    </div>


  </div>
</div>